#!/bin/bash 
# set -x # debug

export cbtnodestart="$HOME/ocean/oceand -datadir=$HOME/dgld/mainnet/ocean-cb"

# Check for CBT node status and kick off if off
cbt_main_status=$(ps -aux | grep -w "ocean-cb" | grep -v grep | awk '{ print "Online" }')
# echo $cbt_main_status

if [[ $cbt_main_status = "Online" ]]
then
	# echo "CBT Ocean server online"
	sleep 0
else
	echo "Starting CBT node (binaries)..."
	$cbtnodestart &
	sleep 2
fi
